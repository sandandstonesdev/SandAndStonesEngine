#version 450

layout(set = 0, binding = 0) uniform texture2DArray SurfaceTexture;
layout(set = 0, binding = 1) uniform sampler SurfaceSampler;

layout(location = 0) in vec4 fsin_Color;
layout(location = 1) in vec3 fsin_TexCoords;

layout(location = 0) out vec4 fsout_Color;

void main()
{
    vec4 texColor = texture(sampler2DArray(SurfaceTexture, SurfaceSampler), fsin_TexCoords);
    fsout_Color =  vec4(texColor.xyz * fsin_Color.xyz, texColor.w * fsin_Color.w);
}